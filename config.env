# Solr 7 (source)
SOLR7_URL=http://localhost:8983/solr
SOLR7_COLLECTION=your_collection
SOLR7_QUERY=*:*

# Solr 9 (destination)
SOLR9_URL=http://localhost:8984/solr
SOLR9_PARENT_COLLECTION=parent_collection
SOLR9_CHUNK_COLLECTION=chunk_collection

# DJL Embedding Service
DJL_URL=http://localhost:8080/predictions/all-MiniLM-L6-v2

# Model Configuration
# For --local mode: can be HuggingFace model name OR local path
# Examples:
#   MODEL_NAME=all-MiniLM-L6-v2              (download from HuggingFace)
#   MODEL_NAME=/path/to/model                (load from local directory)
#   MODEL_NAME=./model                       (relative path)
MODEL_NAME=all-MiniLM-L6-v2

# Chunking
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Processing
BATCH_SIZE=64
FETCH_ROWS=100
